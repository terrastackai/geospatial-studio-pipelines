FROM quay.io/geospatial-studio/gsp-gdal-base:latest
USER root

RUN pip install --upgrade pip
RUN pip install ipython nbformat pg8000 sqlalchemy
${requirements_docker}

# Configure user and work dir
ADD ${target_code} ${working_dir}${target_dir}
${additional_files_docker}
# Group ownership, data directory and file permission
RUN mkdir ${working_dir}data \
&& mkdir -p /.config/sentinelhub \
&& mkdir /.docker && chmod -R 777 /.docker \
&& mkdir /.local && chmod -R 777 /.local \
&& mkdir /.cache && chmod -R 777 /.cache \
&& chown -R 1001:1001 ${working_dir} \
&& chmod -R 777 ${working_dir}

COPY sentinelhub_config.toml /.config/sentinelhub/config.toml
RUN chmod -R 777 /.config/sentinelhub/

ENV SH_PROFILE=cdse

ADD ${target_code} ${working_dir}${target_dir}
${additional_files_docker}
RUN chmod -R 777 ${working_dir}

USER 1001
WORKDIR "${working_dir}"

ADD orchestrate_wrapper/orchestrate_wrapper.py ${working_dir}

# CMD ["${command}", "${target_dir}${target_code}"]
CMD ["sh", "-c", "python ${working_dir}orchestrate_wrapper.py"]
